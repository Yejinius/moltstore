# Supabase Configuration
# Required for both local development and production

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Get these values from:
# https://supabase.com/dashboard → Your Project → Settings → API
#
# NEXT_PUBLIC_SUPABASE_URL: Project URL
# NEXT_PUBLIC_SUPABASE_ANON_KEY: Project API keys → anon/public
# SUPABASE_SERVICE_ROLE_KEY: Project API keys → service_role (keep secret!)

# AI Review Configuration (Optional - for AI-powered code review)
# Get your API key from: https://console.anthropic.com/

ANTHROPIC_API_KEY=sk-ant-your-api-key

# AI Review Settings
ENABLE_AI_REVIEW=true
AI_REVIEW_AUTO_TRIGGER=true
AI_REVIEW_MODEL=claude-opus-4-20250514

# Thresholds (0-100)
AI_REVIEW_APPROVE_THRESHOLD=80
AI_REVIEW_REJECT_THRESHOLD=40
AI_REVIEW_COST_LIMIT=1.00

# Sandbox Configuration (Optional - requires Docker)
DOCKER_SANDBOX_ENABLED=false
SANDBOX_TIMEOUT_SECONDS=60
SANDBOX_MEMORY_LIMIT=512m
SANDBOX_CPU_LIMIT=0.5
